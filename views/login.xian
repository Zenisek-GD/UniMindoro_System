<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>UniMindoro - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            overflow: hidden;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0B1120 0%, #1A1F35 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
            padding: 20px;
        }

        .background-blob {
            position: fixed;
            border-radius: 50%;
            filter: blur(80px);
            opacity: 0.15;
            animation: float 20s infinite ease-in-out;
            z-index: 1;
        }

        .blob-1 {
            width: 400px;
            height: 400px;
            background: #3CB4FF;
            top: -200px;
            right: -100px;
            animation-delay: 0s;
        }

        .blob-2 {
            width: 300px;
            height: 300px;
            background: #00C6A9;
            bottom: -150px;
            left: -100px;
            animation-delay: -5s;
        }

        .blob-3 {
            width: 200px;
            height: 200px;
            background: #667eea;
            top: 50%;
            left: 10%;
            animation-delay: -10s;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0) rotate(0deg); }
            33% { transform: translateY(-20px) rotate(120deg); }
            66% { transform: translateY(20px) rotate(240deg); }
        }

        .login-container {
            background: rgba(21, 27, 43, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 24px;
            box-shadow: 
                0 25px 50px -12px rgba(0, 0, 0, 0.5),
                0 0 0 1px rgba(255, 255, 255, 0.05);
            width: 100%;
            max-width: 420px;
            max-height: 90vh;
            position: relative;
            z-index: 10;
            overflow: hidden;
        }

        .login-content {
            padding: 40px 32px;
            max-height: 90vh;
            overflow-y: auto;
        }

        .login-content::-webkit-scrollbar {
            width: 4px;
        }

        .login-content::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 2px;
        }

        .login-content::-webkit-scrollbar-thumb {
            background: #3CB4FF;
            border-radius: 2px;
        }

        .brand-text {
            font-weight: 700;
            background: linear-gradient(135deg, #3CB4FF 0%, #00C6A9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .input-field {
            background: rgba(255, 255, 255, 0.05);
            border: 1.5px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            color: #EAEAEA;
            transition: all 0.3s ease;
            width: 100%;
        }

        .input-field::placeholder {
            color: #6B7280;
        }

        .input-field:focus {
            border-color: #3CB4FF;
            box-shadow: 0 0 0 4px rgba(60, 180, 255, 0.1);
            background: rgba(255, 255, 255, 0.08);
            outline: none;
        }

        .login-btn {
            background: linear-gradient(135deg, #3CB4FF 0%, #00C6A9 100%);
            border-radius: 16px;
            color: white;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        .login-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .login-btn:hover::before {
            left: 100%;
        }

        .login-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 25px rgba(60, 180, 255, 0.3);
        }

        .forgot-link {
            color: #9CA3AF;
            transition: color 0.3s ease;
            text-decoration: none;
        }

        .forgot-link:hover {
            color: #3CB4FF;
        }

        .toggle-link {
            color: #3CB4FF;
            transition: color 0.3s ease;
            text-decoration: none;
        }

        .toggle-link:hover {
            color: #00C6A9;
        }

        .demo-section {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .role-btn {
            background: rgba(255, 255, 255, 0.05);
            border: 1.5px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }

        .role-btn:hover {
            border-color: #3CB4FF;
            background: rgba(60, 180, 255, 0.1);
        }

        .role-btn.active {
            border-color: #3CB4FF;
            background: rgba(60, 180, 255, 0.15);
        }

        .error-message {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
        }

        @media (max-height: 700px) {
            .login-container {
                max-height: 95vh;
            }
            
            .login-content {
                padding: 30px 24px;
            }
        }
    </style>
</head>
<body>
    <!-- Animated Background Blobs -->
    <div class="background-blob blob-1"></div>
    <div class="background-blob blob-2"></div>
    <div class="background-blob blob-3"></div>

    <!-- Login Container -->
    <div class="login-container">
        <div class="login-content">
            <!-- Header -->
            <div class="text-center pb-6">
                <!-- Logo -->
                <div class="flex items-center justify-center space-x-3 mb-6">
                    <div class="w-14 h-14 bg-gradient-to-br from-[#3CB4FF] to-[#00C6A9] rounded-2xl flex items-center justify-center shadow-lg">
                        <i class="fas fa-hands-helping text-white text-xl"></i>
                    </div>
                    <h1 class="text-4xl font-bold brand-text">UniMindoro</h1>
                </div>
                <p class="text-gray-400 text-sm font-medium">
                    Unified Information & Management System
                </p>
            </div>

            <!-- Login Form -->
            <form action="/login" method="POST">
                {{#if error}}
                <div class="error-message rounded-xl p-4 mb-6">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle text-red-400 mr-3"></i>
                        <span class="text-red-300 text-sm font-medium">{{error}}</span>
                    </div>
                </div>
                {{/if}}

                <!-- Email Field -->
                <div class="mb-5">
                    <label class="block text-gray-300 text-sm font-semibold mb-3 uppercase tracking-wide text-xs" for="email">
                        Email Address
                    </label>
                    <div class="relative">
                        <input 
                            id="email" 
                            name="email" 
                            type="email" 
                            required 
                            class="input-field px-5 py-4 text-sm placeholder-gray-500 focus:outline-none focus:ring-0"
                            placeholder="hello@unimindoro.com"
                        >
                        <div class="absolute right-4 top-1/2 transform -translate-y-1/2">
                            <i class="fas fa-envelope text-gray-500"></i>
                        </div>
                    </div>
                </div>

                <!-- Password Field -->
                <div class="mb-6">
                    <label class="block text-gray-300 text-sm font-semibold mb-3 uppercase tracking-wide text-xs" for="password">
                        Password
                    </label>
                    <div class="relative">
                        <input 
                            id="password" 
                            name="password" 
                            type="password" 
                            required 
                            class="input-field px-5 py-4 text-sm placeholder-gray-500 focus:outline-none focus:ring-0"
                            placeholder="••••••••"
                        >
                        <div class="absolute right-4 top-1/2 transform -translate-y-1/2">
                            <i class="fas fa-lock text-gray-500"></i>
                        </div>
                    </div>
                </div>

                <!-- Hidden Role Field -->
                <input type="hidden" id="role" name="role" value="">

                <!-- Login Button -->
                <button type="submit" class="login-btn py-4 font-semibold text-sm mb-6 relative overflow-hidden">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    LOG IN
                </button>

                <!-- Forgot Password -->
                <div class="text-center mb-6">
                    <a href="#" class="forgot-link text-sm font-medium transition-colors duration-200">
                        FORGOT YOUR PASSWORD?
                    </a>
                </div>
            </form>

          

            <!-- Register Link -->
            <div class="border-t border-gray-800 pt-6 text-center">
                <p class="text-gray-400 text-sm">
                    Don't have an account? 
                    <a href="/register" class="toggle-link font-semibold ml-1 transition-colors duration-200">
                        Sign up here
                    </a>
                </p>
            </div>
        </div>
    </div>

    <script>
        let selectedRole = 'admin';

        function selectRole(role) {
            selectedRole = role;
            
            // Remove active class from all buttons
            document.getElementById('admin-btn').classList.remove('active');
            document.getElementById('staff-btn').classList.remove('active');
            document.getElementById('sector-btn').classList.remove('active');
            
            // Add active class to selected button
            document.getElementById(role + '-btn').classList.add('active');
            
            // Set role in hidden field
            document.getElementById('role').value = role;
        }

        function quickLogin(email, password) {
            document.getElementById('email').value = email;
            document.getElementById('password').value = password;
            
            // Set role based on email
            if (email.includes('admin')) selectRole('admin');
            else if (email.includes('staff')) selectRole('staff');
            else if (email.includes('sector')) selectRole('sector_rep');
            
            document.querySelector('form').submit();
        }

        // Auto-select admin by default
        document.addEventListener('DOMContentLoaded', function() {
            selectRole('admin');
        });

        // Prevent form submission on enter key in inputs to avoid accidental submission
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') {
                const activeElement = document.activeElement;
                if (activeElement.tagName === 'INPUT' && activeElement.type !== 'submit') {
                    e.preventDefault();
                }
            }
        });
    </script>
</body>
</html>